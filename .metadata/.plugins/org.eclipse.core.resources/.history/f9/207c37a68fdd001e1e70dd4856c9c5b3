/* Definitions for myTask */
osThreadId_t myTaskHandle;
uint32_t myTaskBuffer[ 128 ];
osStaticThreadDef_t myTaskControlBlock;
const osThreadAttr_t myTask_attributes = {
  .name = "myTask",
  .cb_mem = &myTaskControlBlock,
  .cb_size = sizeof(myTaskControlBlock),
  .stack_mem = &myTaskBuffer[0],
  .stack_size = sizeof(myTaskBuffer),
  .priority = (osPriority_t) osPriorityNormal,
};
